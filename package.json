{
  "name": "typeagent",
  "version": "0.0.1",
  "license": "MIT",
  "description": "TypeAgent is an experimental opinionated library that makes it easy to build generative AI Agents using typescript.",
  "keywords": [
    "schema",
    "LLM",
    "agent",
    "assistant",
    "prompt",
    "TypeScript",
    "validation"
  ],
  "homepage": "https://github.com/caridy/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/caridy/TypeAgent.git"
  },
  "bugs": {
    "url": "https://github.com/caridy/TypeAgent/issues"
  },
  "scripts": {
    "build": "tsc -p src",
    "build-all": "npm run build --workspaces",
    "prepare": "npm run build-all",
    "postbuild": "copyfiles -u 1 src/*.d.ts dist"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "langsmith": "^0.0.41",
    "typechat": "^0.0.10"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "typescript": "^5.1.3"
  },
  "workspaces": [
    "./",
    "./examples/*"
  ]
}
