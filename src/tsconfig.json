{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true, // Optional, but useful for linking to source files
    "skipLibCheck": true,
    "target": "es2021",
    "lib":  ["ESNext", "DOM"],
    "module": "CommonJS",
    "types": ["node"],
    "outDir": "../dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "inlineSourceMap": true,
  }
}
